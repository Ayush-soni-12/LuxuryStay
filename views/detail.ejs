<script>


// map functionality



function initMap() {
    const geocoder = new google.maps.Geocoder();
  const address = "<%= detail ? detail.location + ', ' + detail.country : '' %>";

  if (!address.trim()) {
    console.error('Address is not defined');
    return;
  }

    geocoder.geocode({ address: address }, function(results, status) {
      if (status === 'OK') {
        const map = new google.maps.Map(document.getElementById('map'), {
          zoom: 12,
          center: results[0].geometry.location
        });

        const marker = new google.maps.Marker({
          map: map,
          position: results[0].geometry.location
        });
      } else {
        console.error('Geocode was not successful for the following reason: ' + status);
      }
    });
  }











    // Booking functionality
    document.addEventListener('DOMContentLoaded',  async function() {
        const bookingForm = document.getElementById('bookingForm');
        const checkinInput = document.getElementById('checkin');
        const checkoutInput = document.getElementById('checkout');
        const guestsSelect = document.getElementById('guests');
        const roomTypeSelect = document.getElementById('roomTypes');
        const numberOfRoomsSelect = document.getElementById('numberOfRoom');
        const nightsSpan = document.getElementById('nights');
        const basePriceSpan = document.getElementById('basePrice');
        const totalPriceSpan = document.getElementById('totalPrice');
        const totalInput = document.getElementById('totalInput');
        const bookingModal = document.getElementById('bookingModal');
        const modalClose = document.getElementById('modalClose');
        
        // Set minimum date to today
        const today = new Date().toISOString().split('T')[0];
        checkinInput.min = today;
        
        // Update checkout min date when checkin changes
        checkinInput.addEventListener('change', function() {
            checkoutInput.min = this.value;
            calculateTotal();
        });
        
        checkoutInput.addEventListener('change', calculateTotal);
        guestsSelect.addEventListener('change', calculateTotal);
        numberOfRoomsSelect.addEventListener('change', calculateTotal);
        roomTypeSelect.addEventListener('change', calculateTotal);
        
       function calculateTotal() {
    if (checkinInput.value && checkoutInput.value) {
        const checkin = new Date(checkinInput.value);
        const checkout = new Date(checkoutInput.value);
        const nights = Math.ceil((checkout - checkin) / (1000 * 60 * 60 * 24));
        const numberOfRooms = parseInt(numberOfRoomsSelect.value, 10);

        if (nights > 0 && !isNaN(numberOfRooms) && numberOfRooms > 0) {
            nightsSpan.textContent = nights;
            document.getElementById('numberOfRoomsDisplay').textContent = numberOfRooms;

            // Calculate the base price based on the number of rooms and nights
            const basePrice = parseFloat("<%= detail.price || 0 %>") * nights * numberOfRooms;

            // Add cleaning and service fees
            const cleaningFee = 500;
            const serviceFee = 300;
            const total = basePrice + cleaningFee + serviceFee;

            // Update the UI
            basePriceSpan.textContent = '₹' + basePrice.toLocaleString('en-IN');
            totalPriceSpan.textContent = '₹' + total.toLocaleString('en-IN');
            totalInput.value = total.toFixed(2);
        } else {
            // Reset total if inputs are invalid
            nightsSpan.textContent = 0;
            document.getElementById('numberOfRoomsDisplay').textContent = 0;
            basePriceSpan.textContent = '₹0';
            totalPriceSpan.textContent = '₹0';
            totalInput.value = '';
        }
    } else {
        // Reset total if inputs are missing
        nightsSpan.textContent = 0;
        document.getElementById('numberOfRoomsDisplay').textContent = 0;
        basePriceSpan.textContent = '₹0';
        totalPriceSpan.textContent = '₹0';
        totalInput.value = '';
    }
}




        bookingForm.addEventListener('submit', function (e) {
        if (!totalInput.value) {
            e.preventDefault();
            alert('Please select valid dates to calculate the total.');
        }
    });





    const listingId = "<%=detail._id%>";
    const response = await fetch(`/api/listing/${listingId}/booked-dates`);
    const data = await response.json();
   


    if (data.success) {

            const bookedDates = data.bookedDates;
        

            // Display booked dates
            const bookedDatesList = document.getElementById("booked-dates-list");
            bookedDates.forEach((booking) => {
                const listItem = document.createElement("li");
                listItem.textContent = `From ${new Date(booking.checkin).toISOString().split("T")[0]} to ${new Date(booking.checkout).toISOString().split("T")[0]}`;
                listItem.classList.add("unavailable-date"); // Add a class for styling
                bookedDatesList.appendChild(listItem);
            });
        }
    });


</script>
</body>
