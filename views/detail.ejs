    </div>

    <!-- Main Content and Booking Container -->
    <div class="booking-container">
        <!-- Main Content -->
        <div class="property-content">
            <!-- Host Info -->
            <div class="host-section">
                <div class="host-avatar">
                    <% if (detail.owner && detail.owner.image) { %>
                        <img src="<%= detail.owner.image %>" alt="Host avatar">
                    <% } else { %>
                        <img src="/images/default-avatar.png" alt="Default host avatar">
                    <% } %>
                </div>
                <div class="host-info">
                    <% if (ownerExists) { %>
                         <a href="/api/user/profile/<%= detail.owner._id %>" class="text-decoration-none user-profile-link">
                        <h4>Hosted by <%= detail.owner.name %></h4>
                        </a>
                    <% } else { %>
                        <h4>Hosted by <em>Unknown (User deleted)</em></h4>
                    <% } %>
                    <p>Superhost </p>
                </div>
            </div>

            <!-- Property Description -->
            <div class="property-description">
                <p><%= detail.description %></p>
            </div>

            <!-- Amenities -->
            <div class="amenities-section">
                <h2>What this place offers</h2>
                <div class="amenities-grid">
                    <div class="amenity-item">
                        <i class="fa-solid fa-wifi amenity-icon"></i>
                        <span>Wifi</span>
                    </div>
                    <div class="amenity-item">
                        <i class="fa-solid fa-kitchen-set amenity-icon"></i>
                        <span>Kitchen</span>
                    </div>
                    <div class="amenity-item">
                        <i class="fa-solid fa-car amenity-icon"></i>
                        <span>Free parking</span>
                    </div>
                    <div class="amenity-item">
                        <i class="fa-solid fa-snowflake amenity-icon"></i>
                        <span>Air conditioning</span>
                    </div>
                    <div class="amenity-item">
                        <i class="fa-solid fa-tv amenity-icon"></i>
                        <span>TV</span>
                    </div>
                    <div class="amenity-item">
                        <i class="fa-solid fa-umbrella-beach amenity-icon"></i>
                        <span>Beach access</span>
                    </div>
                </div>
            </div>

    

            <!-- Reviews Section -->
            <div class="reviews-section">
                <div class="reviews-header">
                    <div class="average-rating">★ 4.8</div>
                    <div class="review-count">· 24 reviews</div>
                </div>
                
                <div class="review-grid">
                    <% for (let review of detail.recentReviews) { %>
                        <div class="review-card">
                            <div class="reviewer-info">
                                <div class="review-avatar">
                                    <% if (review.author && review.author.image) { %>
                                        <img src="<%= review.author.image %>" alt=" avatar">
                                    <% } else { %>
                                        <img src="/images/default-avatar.png" alt="Default reviewer avatar">
                                    <% } %>
                                </div>
                                <div>
                                    <h4 class="reviewer-name">
                                        <% if(review.author) { %>
                                                <%= review.author.name %>
                                        <% } else { %>
                                            Anonymous
                                        <% } %>
                                    </h4>
                                    <p class="review-date">
                                        <%= new Date(review.createdAt).toLocaleDateString('en-US', { month: 'long', year: 'numeric' }) %>
                                    </p>
                                </div>
                                <% if(currentUser && review.author && currentUser._id.toString()===review.author._id.toString()){ %>
                                <form method="post" action="/show/<%=detail._id%>/reviews/<%= review._id%>?_method=DELETE" style="margin-left: auto;">
                                    <button type="submit" style="background: none; border: none; cursor: pointer;">
                                        <i class="fa-solid fa-trash" style="color: #ff4d4f;"></i>
                                    </button>
                                </form>
                                <% } %>
                            </div>
                            <div class="review-content">
                                <p><%= review.comment %></p>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>

            <!-- Review Form -->
            <% if(currentUser){ %>
            <div class="review-form">
                <h2>Leave a Review</h2>
