                    <span class="price-period"> per night</span>
                </div>
                <div class="rating">
                    <i class="fas fa-star"></i>
                    <span>4.8 (24 reviews)</span>
                </div>
            </div>
            
            <form action="/api/booking/<%=detail._id%>" method="post" id="bookingForm" class="booking-form">
                <input type="hidden" id="totalInput" name="total" value="">
                
                <div class="date-picker">
                    <div class="date-input-group">
                        <label for="checkin" class="date-label">CHECK-IN</label>
                        <input type="date" id="checkin" class="date-input" name="checkin" required>
                    </div>
                    <div class="date-input-group">
                        <label for="checkout" class="date-label">CHECKOUT</label>
                        <input type="date" id="checkout" class="date-input" name="checkout" required>
                    </div>
                </div>
                
                <div>
                    <label for="guests" class="date-label">GUESTS</label>
                    <select id="guests" class="guests-select" name="guests" required>
                        <option value="1">1 guest</option>
                        <option value="2" selected>2 guests</option>
                        <option value="3">3 guests</option>
                        <option value="4">4 guests</option>
                        <option value="5">5 guests</option>
                        <option value="6">6 guests</option>
                    </select>
                </div>

                <div>
                    <label for="numberOfRoom" class="date-label">NUMBER OF ROOMS</label>
                    <input type="number" id="numberOfRoom" class="guests-select" name="numberOfRoom" min="1" max="5" value="1" required>
                </div>
                
                <div class="booking-summary">
                    <div class="summary-row">
                        <span>₹<%= detail.price.toLocaleString("en-IN") %> x <span id="nights">1</span> nights x <span id="numberOfRoomsDisplay">1</span> rooms</span>
                        <span id="basePrice">₹<%= detail.price.toLocaleString("en-IN") %></span>
                    </div>
                    <div class="summary-row">
                        <span>Cleaning fee</span>
                        <span>₹500</span>
                    </div>
                    <div class="summary-row">
                        <span>Service fee</span>
                        <span>₹300</span>
                    </div>
                    <div class="total-row">
                        <span>Total</span>
                        <span id="totalPrice">₹<%= (detail.price + 800).toLocaleString("en-IN") %></span>
                    </div>
                </div>
                
