

            
<%- include('partials/header') %>

        <div class="auth-container">
            <h1 class="auth-heading">Sign Up</h1>
            
            <div class="message" style="text-align: center;">
                <% if (message) { %>
                    <p id="review-message" style="color: red"><%= message %></p>
                <% } %>
            </div>
            
            <form class="auth-form needs-validation" action="/api/signup" method="post" novalidate>
                <div class="form-group">
                    <label for="name">Username</label>
                    <input type="text" class="input form-control" id="name" name="name" required>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Please choose a username</div>
                </div>

                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="input form-control" id="email" name="email" required>
                    <div class="invalid-feedback">Please provide a valid email</div>
                </div>
                <div class="form-group">
                    <label for="Phone_No">Phone_No</label>
                    <input type="text" class="input form-control" id="Phone_No" name="Phone_No" required>
                    <div class="invalid-feedback">Please provide a valid Phone_No</div>
                </div>

                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="input form-control" id="password" name="password" required>
                    <div class="invalid-feedback">Please create a password</div>
                </div>

                <div class="login" style="text-align: center; margin-top: 1rem;">
                    <p>Already have an account? <a href="/api/login" class="text-secondary" style="font-weight: bold; text-decoration: none;">Login</a></p>
                </div>

                <div class="submit-container">
                    <button type="submit" class="btn-17">
                        <span class="text-container">
                            <span class="text">Create Account</span>
                        </span>
                    </button>
                </div>
            </form>
        </div>

        <%- include('partials/footer') %>
        <script>
document.querySelector('.auth-form').addEventListener('submit', function(e) {
    const emailInput = document.getElementById('email');
    const email = emailInput.value.trim();
    // Regex for common TLDs (add more if needed)
    const tldRegex = /^[^@]+@[^@]+\.(com|net|org|in|edu|gov|io|co\.in)$/i;
    if (!tldRegex.test(email)) {
        e.preventDefault();
        emailInput.setCustomValidity("Please enter a valid email address with a common domain (e.g., .com, .net, .org, .in, .co.in)");
        emailInput.reportValidity();
    } else {
        emailInput.setCustomValidity("");
    }
});
</script>


   

     