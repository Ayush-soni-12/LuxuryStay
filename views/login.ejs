        
    <%- include('partials/header') %>

        <div class="auth-container">
            <h1 class="auth-heading">Log In</h1>

            <div class="message" style="text-align: center;">
                <% if (message) { %>
                    <p id="review-message" style="color: red"><%= message %></p>
                <% } %>
            </div>
            
            <form class="auth-form needs-validation" action="/api/login" method="post" novalidate>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="input form-control" id="email" name="email" required>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Please choose a email</div>
                </div>

                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="input form-control" id="password" name="password" required>
                    <div class="invalid-feedback">Please create a password</div>
                </div>

                <div class="forgot-password">
                    <a href="/api/forgotPassword" class="text-secondary">Forgot Password?</a>
                </div>
                
                
                <div class="signup" style="text-align: center; margin-top: 1rem;">
                    <p>Don't have an account? <a href="/api/signup" class="text-secondary" style="font-weight: bold; text-decoration: none;">Sign Up</a></p>
                </div>
                <div class="submit-container">
                    <button type="submit" class="btn-17">
                        <span class="text-container">
                            <span class="text">Create Account</span>
                        </span>
                    </button>
                </div>

            </form>
            <form action="/auth/google" method="GET">
                <button type="submit">Login with Google</button>
              </form>
              
        </div>

        <%- include('partials/footer') %>
