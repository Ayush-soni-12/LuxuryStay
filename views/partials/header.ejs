    <style>
        :root {
            --primary: #FF385C;
            --secondary: #008489;
            --dark: #222222;
            --light: #f7f7f7;
            --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }
        
        /* Sidebar Container */
        #full {
    height: 100vh;
    width: 400px;
    background-color: rgba(255, 255, 255, 0.7);
    position: fixed;
    z-index: 1000;
    top: 0;
    right: -400px;
    backdrop-filter: blur(10px);
    overflow-y: auto;
    box-shadow: -5px 0px 10px rgba(0, 0, 0, 0.1);
  }
        /* Profile Section */
        .profile {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin-bottom: 2rem;
        }
        
        .profile i {
            font-size: 2rem;
            color: var(--primary);
        }
        
        .profile h1 {
            font-size: 1.5rem;
            font-weight: 600;
        }
        
        /* Navigation Links */
        .sideBar {
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
            margin-bottom: 3rem;
        }
        
        .sideBar a {
            display: flex;
            align-items: center;
            gap: 1rem;
            color: var(--dark);
            text-decoration: none;
            padding: 0.8rem;
            border-radius: 8px;
            transition: var(--transition);
        }
        
        .sideBar a:hover {
            background: rgba(255, 56, 92, 0.1);
            transform: translateX(5px);
        }
        
        .sideBar h4 {
            margin: 0;
            font-weight: 500;
        }
        
        /* Auth Section */
        .signLogin {
            border-top: 1px solid #eee;
            padding-top: 2rem;
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }
        
        .signLogin a {
            display: flex;
            align-items: center;
            gap: 1rem;
            color: var(--dark);
            text-decoration: none;
            padding: 0.8rem;
            border-radius: 8px;
            transition: var(--transition);
        }
        
        .signLogin a:hover {
            background: rgba(0, 132, 137, 0.1);
            color: var(--secondary);
        }
        
        /* Additional Features */
        .host-dashboard {
            background: rgba(0, 132, 137, 0.05);
            padding: 1.5rem;
            border-radius: 12px;
            margin: 2rem 0;
        }
        
        .progress-bar {
            height: 6px;
            background: #eee;
            border-radius: 3px;
            margin-top: 1rem;
        }
        
        .progress-fill {
            width: 75%;
            height: 100%;
            background: var(--primary);
            border-radius: 3px;
            transition: var(--transition);
        }
        
        .quick-stats {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 1rem;
            margin-top: 2rem;
        }
        
        .stat-item {
            background: rgba(255, 56, 92, 0.05);
            padding: 1rem;
            border-radius: 8px;
            text-align: center;
        }



        .ai-logo {
        width: 60px;
        height: 60px;
        z-index: 1000;
        margin: 0 auto 15px;
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .ai-logo-inner {
        width: 50px;
        height: 50px;
        z-index: 1000;
        background: linear-gradient(135deg, #4361ee, #4895ef);
        border-radius: 15px;
        display: flex;
        justify-content: center;
        align-items: center;
        position: relative;
        animation: pulse 2s infinite alternate;
    }

    .ai-logo-eye {
        position: absolute;
        width: 8px;
        height: 8px;
        background-color: white;
        border-radius: 50%;
        top: 15px;
    }

    .ai-logo-eye.left {
        left: 15px;
    }

    .ai-logo-eye.right {
        right: 15px;
    }

    .ai-logo-mouth {
        position: absolute;
        width: 20px;
        height: 8px;
        background-color: white;
        border-radius: 0 0 10px 10px;
        bottom: 15px;
        animation: mouthTalk 0.5s infinite alternate;
    }
  

    

    @keyframes pulse {
        0% { transform: scale(1); box-shadow: 0 0 0 rgba(67, 97, 238, 0.4); }
        100% { transform: scale(1.05); box-shadow: 0 0 20px rgba(67, 97, 238, 0.6); }
    }

    @keyframes mouthTalk {
        0% { height: 8px; border-radius: 0 0 10px 10px; }
        100% { height: 4px; border-radius: 0 0 5px 5px; }
    }


 /* Airbnb-style Search Bar */


/* Animation */
@keyframes pulse {
    0% { box-shadow: 0 0 0 0 rgba(255,56,92,0.4); }
    70% { box-shadow: 0 0 0 10px rgba(255,56,92,0); }
    100% { box-shadow: 0 0 0 0 rgba(255,56,92,0); }
}

.airbnb-search-button:active {
    animation: pulse 0.5s;
}

