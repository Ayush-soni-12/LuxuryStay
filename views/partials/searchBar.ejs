    <!-- Airbnb Advanced Search Bar -->
<div class="airbnb-search-container">
    <div class="airbnb-search-wrapper">
      <form action="/show/search" method="GET" class="airbnb-search-form needs-validation">
        <!-- Location Search -->
        <div class="search-field location-field" id="locationField">
          <label for="location">Where</label>
          <input type="text" id="location" name="location" placeholder="Search destinations" autocomplete="off" required>
          <div class="invalid-feedback">Please provide a title</div>
          <i class="fa-solid fa-map-marker-alt"></i>

        </div>
        
        <!-- Check-in Date -->
        <div class="search-field date-field" id="checkinField">
          <label for="checkin">Check in</label>
          <input type="text" id="checkin" name="checkin" placeholder="Add dates" readonly>
          <i class="fa-regular fa-calendar"></i>
        </div>
        
        <!-- Check-out Date -->
        <div class="search-field date-field" id="checkoutField">
          <label for="checkout">Check out</label>
          <input type="text" id="checkout" name="checkout" placeholder="Add dates" readonly>
          <i class="fa-regular fa-calendar"></i>
        </div>
        
        <!-- Guests -->
        <div class="search-field guests-field" id="guestsField">
          <label for="guests">Who</label>
          <input type="text" id="guests" name="guests" placeholder="Add guests" readonly>
          <i class="fa-solid fa-user-group"></i>
          
       
        </div>
        <button type="submit" class="airbnb-search-button">
            <i class="fa-solid fa-magnifying-glass"></i>
            <span>Search</span>
          </button>
      </form>
    </div>
  </div>
  
  
  <!-- Guests Picker Modal (Hidden by default) -->
  <div class="guests-picker-modal" id="guestsPickerModal">
    <div class="modal-content">
      <div class="guest-option">
        <div class="option-label">
          <h4>Adults</h4>
          <p>Ages 13+</p>
        </div>
        <div class="option-controls">
          <button class="decrement">-</button>
          <span class="count">1</span>
          <button class="increment">+</button>
        </div>
      </div>
      <div class="guest-option">
        <div class="option-label">
          <h4>Children</h4>
          <p>Ages 2-12</p>
        </div>
        <div class="option-controls">
          <button class="decrement">-</button>
          <span class="count">0</span>
          <button class="increment">+</button>
        </div>
      </div>
      <div class="guest-option">
        <div class="option-label">
          <h4>Infants</h4>
          <p>Under 2</p>
        </div>
        <div class="option-controls">
          <button class="decrement">-</button>
          <span class="count">0</span>
          <button class="increment">+</button>
        </div>
      </div>
      <div class="modal-footer">
        <button class="apply-guests">Apply</button>
      </div>
    </div>
  </div>
  









        <i class="nav fa-solid fa-bars"></i>
