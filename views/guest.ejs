<script>
    // Edit Profile Modal
const editButtons = document.querySelectorAll('.edit-btn');
const editModal = document.getElementById('edit-profile-modal');
const closeEditModal = editModal.querySelector('.close-modal');
const cancelEditBtn = editModal.querySelector('.secondary-btn');

editButtons.forEach(button => {
  button.addEventListener('click', () => {
    editModal.style.display = 'flex';
  });
});

closeEditModal.addEventListener('click', () => {
  editModal.style.display = 'none';
});

cancelEditBtn.addEventListener('click', () => {
  editModal.style.display = 'none';
});

// Become Host Modal
const becomeHostBtn = document.getElementById('become-host-btn');
const hostModal = document.getElementById('become-host-modal');
const closeHostModal = hostModal.querySelector('.close-modal');

becomeHostBtn.addEventListener('click', () => {
  hostModal.style.display = 'flex';
});

closeHostModal.addEventListener('click', () => {
  hostModal.style.display = 'none';
});

// Close modals when clicking outside
window.addEventListener('click', (e) => {
  if (e.target === editModal) {
    editModal.style.display = 'none';
  }
  if (e.target === hostModal) {
    hostModal.style.display = 'none';
  }
});

