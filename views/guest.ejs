              <small class="text-muted">Upload a clear photo or scan of your ID</small>
            </div>

            <div class="form-group mt-3">
              <label for="addressProof">Address Proof (Utility Bill/Bank Statement)*</label>
              <input type="file" id="addressProof" name="addressProof" accept="image/*,.pdf" required>
              <small class="text-muted">Document should be less than 3 months old</small>
            </div>

            <div class="form-check mt-4">
              <input type="checkbox" id="agreement" required>
              <label for="agreement">I agree to LuxuryStays's Host Terms and Community Standards</label>
            </div>
              <div class="modal-actions">
              <button type="button" class="secondary-btn close-modal">Cancel</button>
              <button type="button" class="primary-btn" id="startHostingBtn">
                <i class="fas fa-check"></i> Submit Application
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>

    

<%-include("partials/footer") %>    <script>
      function openHostModal() {
        const modal = document.getElementById('becomeHostModal');
        if (modal) {
          modal.style.display = 'block';
        }
      }

      document.addEventListener('DOMContentLoaded', function() {
        const hostApplicationForm = document.getElementById('hostApplicationForm');
        const becomeHostModal = document.getElementById('becomeHostModal');
        const closeModalBtns = document.querySelectorAll('.close-modal');
        const startHostingBtn = document.getElementById('startHostingBtn');
        
        // Close modal handlers
        closeModalBtns.forEach(btn => {
          btn.addEventListener('click', () => {
            becomeHostModal.style.display = 'none';
          });
        });
        
        // Close modal when clicking outside
        window.addEventListener('click', (e) => {
          if (e.target === becomeHostModal) {
            becomeHostModal.style.display = 'none';
          }
        });
        
        // Handle Start Hosting button click
        if (startHostingBtn) {
          startHostingBtn.addEventListener('click', function() {
            const idProof = document.getElementById('idProof').files[0];
            const addressProof = document.getElementById('addressProof').files[0];
            const agreement = document.getElementById('agreement');
            
            // Basic validation
            if (!idProof || !addressProof) {
              alert('Please upload both ID proof and address proof documents.');
              return;
            }
            
            if (!agreement.checked) {
              alert('Please agree to the Host Terms and Community Standards.');
              return;
            }
            
            // File size validation (max 5MB each)
            const maxSize = 5 * 1024 * 1024;
            if (idProof.size > maxSize || addressProof.size > maxSize) {
              alert('Document files must be less than 5MB each.');
              return;
            }
            
            // Submit form if validation passes
            hostApplicationForm.submit();
          });
        }
      });
    </script>
